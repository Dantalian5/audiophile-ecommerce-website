---
import Layout from '@layouts/BaseLayout.astro';
import Button from '@/components/common/Button.astro';
---

<Layout title="404 | audiophile">
  <main class="error404">
    <h1 class="error404__title">404</h1>
    <p class="error404__body">Oops, page not found :(</p>
    <Button href="/" class="btn btn-primary" label="go home" />
  </main>
  <style lang="scss">
    .error404 {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 2rem;
      min-height: 80vh;

      &__title {
        font-size: 8rem;
        font-weight: 700;
        color: var(--accent);
        line-height: 1;
      }

      &__body {
        font-size: 2rem;
        font-weight: 700;
        color: var(--foreground-black);
        line-height: 1.2;
        opacity: 0.7;
      }
    }
  </style>
</Layout>
