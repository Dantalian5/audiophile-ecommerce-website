---
import Layout from '@layouts/BaseLayout.astro';
import SimpleHeader from '@components/section/SimpleHeader.astro';
import Input from '@/components/form/Input.astro';
import Radio from '@/components/form/Radio.astro';
import Button from '@/components/common/Button.astro';
---

<Layout title="Checkout | audiophile">
  <SimpleHeader />
  <main class="main-padding main-margin-bottom checkout">
    <form id="checkout-form" class="billing" action="">
      <h2 class="billing__title">Checkout</h2>
      <div class="billing__section">
        <h3 class="billing__section__title">Billing Details</h3>
        <div class="billing__section__wrapper">
          <Input
            name="name"
            label="Name"
            type="text"
            placeholder="Alexei Ward"
            value="Jhon"
          />
          <Input
            name="email"
            label="Email Address"
            type="email"
            placeholder="alexei@mail.com"
          />
          <Input
            name="phone"
            label="Phone Number"
            type="tel"
            placeholder="+1 202-555-0136"
          />
        </div>
      </div>
      <div class="billing__section">
        <h3 class="billing__section__title">shipping info</h3>
        <div class="billing__section__wrapper">
          <div class="billing__section--wide-item">
            <Input
              name="address"
              label="Address"
              type="text"
              placeholder="1137 Williams Avenue"
            />
          </div>

          <Input name="zip" label="ZIP Code" type="text" placeholder="10001" />
          <Input name="city" label="City" type="text" placeholder="New York" />
          <Input
            name="country"
            label="Country"
            type="text"
            placeholder="United States"
          />
        </div>
      </div>
      <div class="billing__section">
        <h3 class="billing__section__title">payment details</h3>
        <fieldset
          class="billing__section__wrapper"
          data-action="show-emoney-form">
          <span class="billing__section__subtitle">Payment Method</span>
          <Radio label="e-Money" value="emoney" name="payment-method" checked />
          <span></span>
          <Radio label="Cash on Delivery" value="cash" name="payment-method" />
        </fieldset>
        <div
          class="billing__section__wrapper billing__section__epay active"
          data-target="emoney-form">
          <Input
            name="emoney-number"
            label="e-Money Number"
            type="text"
            placeholder="238521993"
          />
          <Input
            name="emoney-pin"
            label="e-Money PIN"
            type="text"
            placeholder="6891"
          />
        </div>
        <div class="billing__section__cash" data-target="cash-form">
          <span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="48"
              height="48"
              viewBox="0 0 48 48"
              fill="none">
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
