---
import ProductLayout from '@/layouts/ProductLayout.astro';
import ProductCart from '@components/ProductCart.astro';
import PhotoGallery from '@/components/ProductGallery.astro';
import ProductSpecs from '@/components/ProductSpecs.astro';
import YouMayAlsoLike from '@/components/YouMayAlsoLike.astro';

const product = 'zx7-speaker';
const ad = [
  {
    name: 'ZX9 SPEAKER',
    ref: 'zx9-speaker',
  },
  {
    name: 'XX99 MARK I',
    ref: 'xx99-mark-one-headphones',
  },
  {
    name: 'XX59',
    ref: 'xx59-headphones',
  },
];
---

<ProductLayout title="ZX7 Speaker | audiophile">
  <Fragment slot="main">
    <ProductCart
      productId="zx7-speaker"
      productNickname="zx7"
      title="ZX7"
      subtitle="speaker"
      body="Stream high quality sound wirelessly with minimal to no loss. The ZX7 speaker uses high-end audiophile components that represents the top of the line powered speakers for home or studio use."
      price="3,500"
      imgRef={[
        `/assets/products/${product}/mobile/image-product-preview.jpg`,
        `/assets/products/${product}/tablet/image-product-preview.jpg`,
        `/assets/products/${product}/desktop/image-product-preview.jpg`,
      ]}
    />
    <ProductSpecs
      description={[
        'Reap the advantages of a flat diaphragm tweeter cone. This provides a fast response rate and excellent high frequencies that lower tiered bookshelf speakers cannot provide. The woofers are made from aluminum that produces a unique and clear sound. XLR inputs allow you to connect to a mixer for more advanced usage.',
        'The ZX7 speaker is the perfect blend of stylish design and high performance. It houses an encased MDF wooden enclosure which minimises acoustic resonance. Dual connectivity allows pairing through bluetooth or traditional optical and RCA input. Switch input sources and control volume at your finger tips with the included wireless remote. This versatile speaker is equipped to deliver an authentic listening experience.',
      ]}
      specs={[
        ['2x', 'Speaker Unit'],
        ['2x', 'Speaker Cloth Panel'],
        ['1x', 'User Manual'],
        ['1x', '3.5mm 17.5m Audio Cable'],
        ['1x', '7.5m Optical Cable'],
      ]}
    />
    <PhotoGallery
      imgRef={{
        top: [
          `/assets/products/${product}/mobile/image-gallery-1.jpg`,
          `/assets/products/${product}/tablet/image-gallery-1.jpg`,
          `/assets/products/${product}/desktop/image-gallery-1.jpg`,
        ],
        bottom: [
          `/assets/products/${product}/mobile/image-gallery-2.jpg`,
          `/assets/products/${product}/tablet/image-gallery-2.jpg`,
          `/assets/products/${product}/desktop/image-gallery-2.jpg`,
        ],
        left: [
          `/assets/products/${product}/mobile/image-gallery-3.jpg`,
          `/assets/products/${product}/tablet/image-gallery-3.jpg`,
          `/assets/products/${product}/desktop/image-gallery-3.jpg`,
        ],
      }}
      imgAlt={{
        top: 'a zoom of the zx7 speaker',
        bottom: 'a workstation with two ZX7 speaker',
        left: 'a ZX7 speaker in a living room',
      }}
    /></Fragment
  >
  <YouMayAlsoLike
    productList={[
      {
        name: ad[0].name,
        imgRef: [
          `/assets/products/${ad[0].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[0].ref}`,
      },
      {
        name: ad[1].name,
        imgRef: [
          `/assets/products/${ad[1].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[1].ref}`,
      },
      {
        name: ad[2].name,
        imgRef: [
          `/assets/products/${ad[2].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[2].ref}`,
      },
    ]}
  />
</ProductLayout>
