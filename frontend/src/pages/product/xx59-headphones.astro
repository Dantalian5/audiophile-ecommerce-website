---
import ProductLayout from '@/layouts/ProductLayout.astro';
import ProductCart from '@components/ProductCart.astro';
import PhotoGallery from '@/components/ProductGallery.astro';
import ProductSpecs from '@/components/ProductSpecs.astro';
import YouMayAlsoLike from '@/components/YouMayAlsoLike.astro';

const product = 'xx59-headphones';
const ad = [
  {
    name: 'XX99 MARK II',
    ref: 'xx99-mark-two-headphones',
  },
  {
    name: 'XX99 MARK I',
    ref: 'xx99-mark-one-headphones',
  },
  {
    name: 'ZX9 SPEAKER',
    ref: 'zx9-speaker',
  },
];
---

<ProductLayout title="XX59 | audiophile">
  <Fragment slot="main">
    <ProductCart
      productId="xx59-headphones"
      productNickname="xx59"
      title="XX59"
      subtitle="Headphones"
      body="Enjoy your audio almost anywhere and customize it to your specific tastes with the XX59 headphones. The stylish yet durable versatile wireless headset is a brilliant companion at home or on the move."
      imgRef={[
        `/assets/products/${product}/mobile/image-product-preview.jpg`,
        `/assets/products/${product}/tablet/image-product-preview.jpg`,
        `/assets/products/${product}/desktop/image-product-preview.jpg`,
      ]}
      price="899"
    />
    <ProductSpecs
      description={[
        'These headphones have been created from durable, high-quality materials tough enough to take anywhere. Its compact folding design fuses comfort and minimalist style making it perfect for travel. Flawless transmission is assured by the latest wireless technology engineered for audio synchronization with videos.',
        'More than a simple pair of headphones, this headset features a pair of built-in microphones for clear, hands-free calling when paired with a compatible smartphone. Controlling music and calls is also intuitive thanks to easy-access touch buttons on the earcups. Regardless of how you use the XX59 headphones, you can do so all day thanks to an impressive 30-hour battery life that can be rapidly recharged via USB-C.',
      ]}
      specs={[
        ['1x', 'Headphone Unit'],
        ['2x', 'Replacement Earcups'],
        ['1x', 'User Manual'],
        ['1x', '3.5mm 5m Audio Cable'],
      ]}
    />
    <PhotoGallery
      imgRef={{
        top: [
          `/assets/products/${product}/mobile/image-gallery-1.jpg`,
          `/assets/products/${product}/tablet/image-gallery-1.jpg`,
          `/assets/products/${product}/desktop/image-gallery-1.jpg`,
        ],
        bottom: [
          `/assets/products/${product}/mobile/image-gallery-2.jpg`,
          `/assets/products/${product}/tablet/image-gallery-2.jpg`,
          `/assets/products/${product}/desktop/image-gallery-2.jpg`,
        ],
        left: [
          `/assets/products/${product}/mobile/image-gallery-3.jpg`,
          `/assets/products/${product}/tablet/image-gallery-3.jpg`,
          `/assets/products/${product}/desktop/image-gallery-3.jpg`,
        ],
      }}
      imgAlt={{
        top: 'a woman with a XX59 headphones',
        bottom: 'an xx59 headphones with books',
        left: 'someone holding an xx59 headphones',
      }}
    />
  </Fragment>
  <YouMayAlsoLike
    productList={[
      {
        name: ad[0].name,
        imgRef: [
          `/assets/products/${ad[0].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[0].ref}`,
      },
      {
        name: ad[1].name,
        imgRef: [
          `/assets/products/${ad[1].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[1].ref}`,
      },
      {
        name: ad[2].name,
        imgRef: [
          `/assets/products/${ad[2].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[2].ref}`,
      },
    ]}
  />
</ProductLayout>
