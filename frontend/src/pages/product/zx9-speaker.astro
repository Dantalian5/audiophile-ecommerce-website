---
import ProductLayout from '@/layouts/ProductLayout.astro';
import ProductCart from '@components/ProductCart.astro';
import PhotoGallery from '@/components/ProductGallery.astro';
import ProductSpecs from '@/components/ProductSpecs.astro';
import YouMayAlsoLike from '@/components/YouMayAlsoLike.astro';

const product = 'zx9-speaker';
const ad = [
  {
    name: 'ZX7 SPEAKER',
    ref: 'zx7-speaker',
  },
  {
    name: 'XX99 MARK I',
    ref: 'xx99-mark-one-headphones',
  },
  {
    name: 'XX59',
    ref: 'xx59-headphones',
  },
];
---

<ProductLayout title="ZX9 Speaker | audiophile">
  <Fragment slot="main">
    <ProductCart
      productId="zx9-speaker"
      productNickname="zx9"
      title="ZX9"
      subtitle="speaker"
      body="Upgrade your sound system with the all new ZX9 active speaker. It’s a bookshelf speaker system that offers truly wireless connectivity -- creating new possibilities for more pleasing and practical audio setups."
      price="4,500"
      imgRef={[
        `/assets/products/${product}/mobile/image-product-preview.jpg`,
        `/assets/products/${product}/tablet/image-product-preview.jpg`,
        `/assets/products/${product}/desktop/image-product-preview.jpg`,
      ]}
      newProductTag
    />
    <ProductSpecs
      description={[
        'Connect via Bluetooth or nearly any wired source. This speaker features optical, digital coaxial, USB Type-B, stereo RCA, and stereo XLR inputs, allowing you to have up to five wired source devices connected for easy switching. Improved bluetooth technology offers near lossless audio quality at up to 328ft (100m).',
        ' Discover clear, more natural sounding highs than the competition with ZX9’s signature planar diaphragm tweeter. Equally important is its powerful room-shaking bass courtesy of a 6.5” aluminum alloy bass unit. You’ll be able to enjoy equal sound quality whether in a large room or small den. Furthermore, you will experience new sensations from old songs since it can respond to even the subtle waveforms.',
      ]}
      specs={[
        ['2x', 'Speaker Unit'],
        ['2x', 'Speaker Cloth Panel'],
        ['1x', 'User Manual'],
        ['1x', '3.5mm 10m Audio Cable'],
        ['1x', '10m Optical Cable'],
      ]}
    />
    <PhotoGallery
      imgRef={{
        top: [
          `/assets/products/${product}/mobile/image-gallery-1.jpg`,
          `/assets/products/${product}/tablet/image-gallery-1.jpg`,
          `/assets/products/${product}/desktop/image-gallery-1.jpg`,
        ],
        bottom: [
          `/assets/products/${product}/mobile/image-gallery-2.jpg`,
          `/assets/products/${product}/tablet/image-gallery-2.jpg`,
          `/assets/products/${product}/desktop/image-gallery-2.jpg`,
        ],
        left: [
          `/assets/products/${product}/mobile/image-gallery-3.jpg`,
          `/assets/products/${product}/tablet/image-gallery-3.jpg`,
          `/assets/products/${product}/desktop/image-gallery-3.jpg`,
        ],
      }}
      imgAlt={{
        top: 'the ZX9 speaker',
        bottom: 'a room with the ZX9 speaker',
        left: 'two ZX9 speaker',
      }}
    /></Fragment
  >
  <YouMayAlsoLike
    productList={[
      {
        name: ad[0].name,
        imgRef: [
          `/assets/products/${ad[0].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[0].ref}`,
      },
      {
        name: ad[1].name,
        imgRef: [
          `/assets/products/${ad[1].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[1].ref}`,
      },
      {
        name: ad[2].name,
        imgRef: [
          `/assets/products/${ad[2].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[2].ref}`,
      },
    ]}
  />
</ProductLayout>
