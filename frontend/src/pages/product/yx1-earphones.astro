---
import ProductLayout from '@/layouts/ProductLayout.astro';
import ProductCart from '@components/ProductCart.astro';
import PhotoGallery from '@/components/ProductGallery.astro';
import ProductSpecs from '@/components/ProductSpecs.astro';
import YouMayAlsoLike from '@/components/YouMayAlsoLike.astro';

const product = 'yx1-earphones';
const ad = [
  {
    name: 'XX99 MARK I',
    ref: 'xx99-mark-one-headphones',
  },
  {
    name: 'XX59',
    ref: 'xx59-headphones',
  },
  {
    name: 'ZX9 SPEAKER',
    ref: 'zx9-speaker',
  },
];
---

<ProductLayout title="YX1 Earphones | audiophile">
  <Fragment slot="main">
    <ProductCart
      productId="yx1-earphones"
      productNickname="yx1"
      title="YX1 Wireless"
      subtitle="earphones"
      body="Tailor your listening experience with bespoke dynamic drivers from the new YX1 Wireless Earphones. Enjoy incredible high-fidelity sound even in noisy environments with its active noise cancellation feature."
      price="599"
      imgRef={[
        `/assets/products/${product}/mobile/image-product-preview.jpg`,
        `/assets/products/${product}/tablet/image-product-preview.jpg`,
        `/assets/products/${product}/desktop/image-product-preview.jpg`,
      ]}
      newProductTag
    />
    <ProductSpecs
      description={[
        'Experience unrivalled stereo sound thanks to innovative acoustic technology. With improved ergonomics designed for full day wearing, these revolutionary earphones have been finely crafted to provide you with the perfect fit, delivering complete comfort all day long while enjoying exceptional noise isolation and truly immersive sound.',
        'The YX1 Wireless Earphones features customizable controls for volume, music, calls, and voice assistants built into both earbuds. The new 7-hour battery life can be extended up to 28 hours with the charging case, giving you uninterrupted play time. Exquisite craftsmanship with a splash resistant design now available in an all new white and grey color scheme as well as the popular classic black.',
      ]}
      specs={[
        ['2x', 'Earphone Unit'],
        ['6x', 'Multi-size Earplugs'],
        ['1x', 'User Manual'],
        ['1x', 'USB-C Charging Cable'],
        ['1x', 'Travel Pouch'],
      ]}
    />
    <PhotoGallery
      imgRef={{
        top: [
          `/assets/products/${product}/mobile/image-gallery-1.jpg`,
          `/assets/products/${product}/tablet/image-gallery-1.jpg`,
          `/assets/products/${product}/desktop/image-gallery-1.jpg`,
        ],
        bottom: [
          `/assets/products/${product}/mobile/image-gallery-2.jpg`,
          `/assets/products/${product}/tablet/image-gallery-2.jpg`,
          `/assets/products/${product}/desktop/image-gallery-2.jpg`,
        ],
        left: [
          `/assets/products/${product}/mobile/image-gallery-3.jpg`,
          `/assets/products/${product}/tablet/image-gallery-3.jpg`,
          `/assets/products/${product}/desktop/image-gallery-3.jpg`,
        ],
      }}
      imgAlt={{
        top: 'a pair of YX1 earphones units',
        bottom: 'a pair of YX1 earphones units on his charging case',
        left: 'a pair of YX1 earphones units and his charging case',
      }}
    /></Fragment
  >
  <YouMayAlsoLike
    productList={[
      {
        name: ad[0].name,
        imgRef: [
          `/assets/products/${ad[0].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[0].ref}`,
      },
      {
        name: ad[1].name,
        imgRef: [
          `/assets/products/${ad[1].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[1].ref}`,
      },
      {
        name: ad[2].name,
        imgRef: [
          `/assets/products/${ad[2].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[2].ref}`,
      },
    ]}
  />
</ProductLayout>
