---
import ProductLayout from '@/layouts/ProductLayout.astro';
import ProductCart from '@components/ProductCart.astro';
import PhotoGallery from '@/components/ProductGallery.astro';
import ProductSpecs from '@/components/ProductSpecs.astro';
import YouMayAlsoLike from '@/components/YouMayAlsoLike.astro';

const product = 'xx99-mark-two-headphones';
const ad = [
  {
    name: 'XX99 MARK II',
    ref: 'xx99-mark-two-headphones',
  },
  {
    name: 'XX99 MARK I',
    ref: 'xx99-mark-one-headphones',
  },
  {
    name: 'ZX9 SPEAKER',
    ref: 'zx9-speaker',
  },
];
---

<ProductLayout title="XX99 Mark II | audiophile">
  <Fragment slot="main">
    <ProductCart
      productId="xx99-mark-two-headphones"
      productNickname="xx99 mk ii"
      title="XX99 Mark II"
      price="2,999"
      subtitle="Headphones"
      body="The new XX99 Mark II headphones is the pinnacle of pristine audio. It redefines your premium headphone experience by reproducing the balanced depth and precision of studio-quality sound."
      imgRef={[
        `/assets/products/${product}/mobile/image-product-preview.jpg`,
        `/assets/products/${product}/tablet/image-product-preview.jpg`,
        `/assets/products/${product}/desktop/image-product-preview.jpg`,
      ]}
      newProductTag
    />
    <ProductSpecs
      description={[
        "Featuring a genuine leather head strap and premium earcups, these headphones deliver superior comfort for those who like to enjoy endless listening. It includes intuitive controls designed for any situation. Whether you're taking a business call or just in your own personal space, the auto on/off and pause features ensure that you'll never miss a beat.",
        ' The advanced Active Noise Cancellation with built-in equalizer allow you to experience your audio world on your terms. It lets you enjoy your audio in peace, but quickly interact with your surroundings when you need to. Combined with Bluetooth 5. 0 compliant connectivity and 17 hour battery life, the XX99 Mark II headphones gives you superior sound, cutting-edge technology, and a modern design aesthetic.',
      ]}
      specs={[
        ['1x', 'Headphone Unit'],
        ['2x', 'Replacement Earcups'],
        ['1x', 'User Manual'],
        ['1x', '3.5mm 5m Audio Cable'],
        ['1x', 'Travel Bag'],
      ]}
    />
    <PhotoGallery
      imgRef={{
        top: [
          `/assets/products/${product}/mobile/image-gallery-1.jpg`,
          `/assets/products/${product}/tablet/image-gallery-1.jpg`,
          `/assets/products/${product}/desktop/image-gallery-1.jpg`,
        ],
        bottom: [
          `/assets/products/${product}/mobile/image-gallery-2.jpg`,
          `/assets/products/${product}/tablet/image-gallery-2.jpg`,
          `/assets/products/${product}/desktop/image-gallery-2.jpg`,
        ],
        left: [
          `/assets/products/${product}/mobile/image-gallery-3.jpg`,
          `/assets/products/${product}/tablet/image-gallery-3.jpg`,
          `/assets/products/${product}/desktop/image-gallery-3.jpg`,
        ],
      }}
      imgAlt={{
        top: 'an man with a XX99 Mark two headphones',
        bottom: 'a xx99 mark two headphones on a table',
        left: 'a zoom of a xx99 mark two headphones',
      }}
    /></Fragment
  >
  <YouMayAlsoLike
    productList={[
      {
        name: ad[0].name,
        imgRef: [
          `/assets/products/${ad[0].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[0].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[0].ref}`,
      },
      {
        name: ad[1].name,
        imgRef: [
          `/assets/products/${ad[1].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[1].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[1].ref}`,
      },
      {
        name: ad[2].name,
        imgRef: [
          `/assets/products/${ad[2].ref}/mobile/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/tablet/image-product-preview.jpg`,
          `/assets/products/${ad[2].ref}/desktop/image-product-preview.jpg`,
        ],
        link: `/product/${ad[2].ref}`,
      },
    ]}
  />
</ProductLayout>
