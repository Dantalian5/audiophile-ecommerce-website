---
const {
  label = 'Label',
  isValid = true,
  name = '',
  value = 'label',
} = Astro.props;
---

<label class="radio">
  <input class="radio__input" type="radio" value={value} name={name} />
  <span class="radio__custom"></span>
  <span class="radio__label">{label}</span>
</label>

<style lang="scss">
  .radio {
    position: relative;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    align-items: center;
    justify-content: flex-start;
    width: 100%;

    border-radius: 8px;
    border: 1px solid;
    border-color: var(--secondary-grey);
    background: transparent;
    padding: 1.125rem 1.5rem;
    cursor: pointer;
    &:hover {
      border-color: var(--accent);
    }
    &__input {
      position: absolute;
      clip: rect(0, 0, 0, 0);
      margin: -1px;
      height: 1px;
      width: 1px;
      overflow: hidden;
      border: 0;
      opacity: 0;
    }
    &__custom {
      position: relative;
      display: block;
      width: 20px;
      height: 20px;
      border: 2px solid;
      border-color: var(--secondary-grey);
      border-radius: 50%;
      margin-right: 8px;
      transition: border-color 0.3s;
      &::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 10px;
        height: 10px;
        background-color: var(--accent);
        border-radius: 50%;
        transform: translate(-50%, -50%) scale(0);
        transition: transform 0.2s ease-in-out;
      }
    }
    &__label {
      color: var(--foreground-dark);
      font-size: 0.75rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: -0.0156rem;
    }
  }
  .radio__input:checked + .radio__custom::after {
    transform: translate(-50%, -50%) scale(1);
  }

  .radio__input:focus + .radio__custom {
    outline: 2px solid var(--accent);
  }
</style>
