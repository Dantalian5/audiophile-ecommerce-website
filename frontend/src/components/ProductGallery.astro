---
const { imgRef, imgAlt } = Astro.props;
---

<section class="main-padding secondary-margin-bottom photo-gallery">
  <picture>
    {
      imgRef.top[2] && (
        <source srcset={imgRef.top[2]} media="(min-width: 75rem)" />
      )
    }
    {
      imgRef.top[1] && (
        <source srcset={imgRef.top[1]} media="(min-width: 43.75rem)" />
      )
    }
    <img
      class="photo-gallery__img photo-gallery__top"
      src={imgRef.top[0]}
      alt={imgAlt.top}
    />
  </picture>
  <picture>
    {
      imgRef.bottom[2] && (
        <source srcset={imgRef.bottom[2]} media="(min-width: 75rem)" />
      )
    }
    {
      imgRef.bottom[1] && (
        <source srcset={imgRef.bottom[1]} media="(min-width: 43.75rem)" />
      )
    }
    <img
      class="photo-gallery__img photo-gallery__bottom"
      src={imgRef.bottom[0]}
      alt={imgAlt.bottom}
    />
  </picture>
  <div class="photo-gallery__right">
    <picture>
      {
        imgRef.left[2] && (
          <source srcset={imgRef.left[2]} media="(min-width: 75rem)" />
        )
      }
      {
        imgRef.left[1] && (
          <source srcset={imgRef.left[1]} media="(min-width: 43.75rem)" />
        )
      }
      <img class="photo-gallery__img" src={imgRef.left[0]} alt={imgAlt.left} />
    </picture>
  </div>
</section>
<style lang="scss">
  .photo-gallery {
    display: grid;
    gap: 1rem;
    &__img {
      width: 100%;
      height: 100%;
      border-radius: 8px;
      object-fit: cover;
      object-position: center center;
    }
  }
  @media screen and (min-width: 43.75rem) {
    .photo-gallery {
      grid-template-areas:
        'top right'
        'bottom right';
      grid-template-rows: repeat(2, 1fr);
      grid-template-columns: 7fr 10fr;
      gap: 1.5rem;
      &__top {
        grid-area: top;
      }
      &__bottom {
        grid-area: bottom;
      }
      &__right {
        grid-area: right;
      }
    }
  }
</style>
