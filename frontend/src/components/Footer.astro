<style lang="scss">
  .footer {
    position: relative;
    background-color: var(--background-dark);
    padding-block: 3.25rem 2.375rem;

    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 3rem;

    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 6.3125rem;
      height: 4px;
      background-color: var(--accent);
    }
    &__logo {
      width: fit-content;
      margin-inline: auto;
      order: 1;
    }
    &__navigation {
      width: 100%;
      display: flex;
      flex-direction: column;
      row-gap: 1rem;
      column-gap: 2.125rem;
      align-items: center;
      justify-content: center;
      order: 2;
      a {
        font-size: 0.8125rem;
        font-weight: 700;
        color: var(--foreground-light);
        text-transform: uppercase;
        font-style: normal;
        line-height: 1.5625rem; /* 192.308% */
        letter-spacing: 0.125rem;
        &:hover {
          color: var(--accent);
        }
      }
    }
    &__body,
    &__copy {
      width: 100%;
      color: var(--foreground-light);
      text-align: center;
      font-size: 0.9375rem;
      font-style: normal;
      font-weight: 400;
      line-height: 1.5625rem; /* 166.667% */
      opacity: 0.5;
    }
    &__body {
      order: 3;
    }
    &__copy {
      order: 4;
    }
    &__socials {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
      order: 5;
      &__link {
        display: block;
        color: var(--foreground-light);
        font-size: 1.5rem;
        height: fit-content;
        &:hover {
          color: var(--accent);
          scale: 1.2;
        }
      }
    }
  }
  @media screen and (min-width: 43.75rem) {
    .footer {
      padding-block: 3.75rem 2.875rem;

      gap: 2rem;
      &::before {
        transform: none;
        left: 2.5rem;
      }
      &__logo {
        margin-left: 0;
      }
      &__navigation {
        flex-direction: row;
        justify-content: flex-start;
      }
      &__body {
        text-align: left;
        margin-bottom: 2.875rem;
      }
      &__copy {
        text-align: left;
        width: fit-content;
        flex-direction: row;
      }
      &__socials {
        width: fit-content;
        margin-left: auto;
      }
    }
  }
  @media screen and (min-width: 62.5rem) {
    .footer {
      padding-block: 4.6875rem 3rem;

      gap: 2.25rem;
      &::before {
        left: 10.3125rem;
      }
      &__logo {
        margin-left: 0;
      }
      &__navigation {
        width: fit-content;
        min-width: 60%;
        justify-content: flex-end;
      }
      &__body {
        max-width: 33.75rem;
        order: 3;
        margin-bottom: 0;
      }
      &__copy {
        text-align: left;
        width: 100%;
        flex-direction: row;
        margin-top: 1.25rem;
        order: 5;
      }
      &__socials {
        order: 4;
        align-self: flex-end;
      }
    }
  }
</style>
