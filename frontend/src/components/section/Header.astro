---
import Button from '@components/common/Button.astro';
---

<header class="main-padding header">
  <div class="hero">
    <p class="hero__new">NEW PRODUCT</p>
    <h1 class="hero__title">XX99 Mark II <br /> Headphones</h1>
    <p class="hero__body">
      Experience natural, lifelike audio and exceptional build quality made for
      the passionate music enthusiast.
    </p>
    <div class="hero__btn">
      <Button href="/product/xx99mark2" variant="accent" label="See Product" />
    </div>
  </div>
  <picture>
    <source
      srcset="/assets/home/desktop/image-header.jpg"
      media="(min-width: 62.5rem)"
    />
    <source
      srcset="/assets/home/tablet/image-header.jpg"
      media="(min-width: 43.75rem)"
    />
    <img
      class="hero-img"
      src="/assets/home/mobile/image-header.jpg"
      alt="XX99 Mark II Headphones"
    />
  </picture>
</header>
<style lang="scss">
  .header {
    min-height: 31.875rem;
    background-color: var(--background-dark-100);
    padding-block: 6.75rem;
    display: flex;
    flex-direction: column;
    width: 100%;
    overflow: hidden;

    margin-bottom: 2.5rem;
    position: relative;
  }
  .hero {
    color: var(--foreground-light);
    text-align: center;
    font-style: normal;
    margin-block: auto;
    position: relative;
    z-index: 2;

    &__new {
      font-size: 0.875rem;
      font-weight: 400;
      line-height: normal;
      letter-spacing: 0.625rem;
      text-transform: uppercase;
      opacity: 0.5;

      margin-bottom: 1rem;
    }
    &__title {
      font-size: 2.25rem;
      font-weight: 700;
      line-height: 1.1;
      letter-spacing: 0.0804rem;
      text-transform: uppercase;
      margin-bottom: 1.5rem;
    }
    &__body {
      font-size: 0.9375rem;
      font-weight: 400;
      line-height: 1.5625rem; /* 166.667% */
      opacity: 0.75;
      margin-bottom: 1.75rem;
      max-width: 21.875rem;
      margin-inline: auto;
    }
    &__btn {
      margin-inline: auto;
      width: fit-content;
    }
  }
  .hero-img {
    position: absolute;
    width: 100%;
    max-width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 1;
    object-fit: contain;
    object-position: center;

    filter: blur(0) brightness(1) contrast(120%);
    animation: fadeInFromDarkness 2s ease-out forwards;
  }
  @media screen and (min-width: 43.75rem) {
    .header {
      min-height: 39.5rem;
      margin-bottom: 6rem;
    }
    .hero {
      &__new {
        margin-bottom: 1.5rem;
      }
      &__title {
        margin-bottom: 1.5rem;
        font-size: 3.5rem;
      }
      &__body {
        margin-bottom: 2.5rem;
      }
    }
  }
  @media screen and (min-width: 62.5rem) {
    .header {
      margin-bottom: 8.125rem;
    }
    .hero {
      text-align: left;
      &__title {
        font-size: 3.5rem;
      }
      &__body {
        margin-left: 0;
      }
      &__btn {
        margin-left: 0;
      }
    }
    .hero-img {
      width: auto;
      left: auto;
      right: min(10.3125rem, 12%);
    }
  }
  @keyframes fadeInFromDarkness {
    from {
      opacity: 0;
      filter: blur(10px) brightness(0.5) contrast(120%);
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      filter: blur(0) brightness(1) contrast(120%);
      transform: scale(1);
    }
  }
</style>
