---
import Button from '@components/common/Button.astro';
---

<header class="main-padding header">
  <!-- <Navbar /> -->
  <div class="hero">
    <p class="hero__new">NEW PRODUCT</p>
    <h1 class="hero__title">XX99 Mark II <br /> Headphones</h1>
    <p class="hero__body">
      Experience natural, lifelike audio and exceptional build quality made for
      the passionate music enthusiast.
    </p>
    <div class="hero__btn">
      <Button href="/product/xx99mark2" variant="accent" label="See Product" />
    </div>
  </div>
</header>
<style lang="scss">
  .header {
    min-height: 40rem;
    background-color: var(--background-dark-19);
    background-image: url('/assets/home/mobile/image-header.jpg');
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    padding-block: 6.75rem;
    display: flex;
    flex-direction: column;
    width: 100%;
    overflow: hidden;

    margin-bottom: 2.5rem;
  }
  .hero {
    color: var(--foreground-light);
    text-align: center;
    font-style: normal;
    margin-block: auto;

    &__new {
      font-size: 0.875rem;
      font-weight: 400;
      line-height: normal;
      letter-spacing: 0.625rem;
      text-transform: uppercase;
      opacity: 0.5;

      margin-bottom: 1rem;
    }
    &__title {
      font-size: 2.25rem;
      font-weight: 700;
      line-height: 1.1;
      letter-spacing: 0.0804rem;
      text-transform: uppercase;
      margin-bottom: 1.5rem;
    }
    &__body {
      font-size: 0.9375rem;
      font-weight: 400;
      line-height: 1.5625rem; /* 166.667% */
      opacity: 0.75;
      margin-bottom: 1.75rem;
      max-width: 21.875rem;
      margin-inline: auto;
    }
    &__btn {
      margin-inline: auto;
      width: fit-content;
    }
  }
  @media screen and (min-width: 43.75rem) {
    .header {
      min-height: min(45.625rem, 100vh);
      background-image: url('/assets/home/tablet/image-header.jpg');
      margin-bottom: 6rem;
    }
    .hero {
      &__new {
        margin-bottom: 1.5rem;
      }
      &__title {
        margin-bottom: 1.5rem;
        font-size: 3.5rem;
      }
      &__body {
        margin-bottom: 2.5rem;
      }
    }
  }
  @media screen and (min-width: 62.5rem) {
    .header {
      background-image: url('/assets/home/desktop/image-hero.jpg');
      margin-bottom: 8.125rem;
    }
    .hero {
      text-align: left;
      &__title {
        font-size: 3.5rem;
      }
      &__body {
        margin-left: 0;
      }
      &__btn {
        margin-left: 0;
      }
    }
  }
</style>
