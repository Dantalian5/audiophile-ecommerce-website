---
import Link from './common/Link.astro';
---

<section class="show">
  <div class="zx9">
    <div class="zx9__img">
      <picture>
        <source
          srcset="public/assets/home/desktop/image-speaker-zx9.png"
          media="(min-width: 1000px)"
        />
        <source
          srcset="public/assets/home/tablet/image-speaker-zx9.png"
          media="(min-width: 43.75rem)"
        />
        <img
          class=""
          src="public/assets/home/mobile/image-speaker-zx9.png"
          alt="a speaker image"
        />
      </picture>
    </div>
    <div class="zx9__info">
      <h3 class="zx9__title">ZX9 <br /> SPEAKER</h3>
      <p class="zx9__body">
        Upgrade to premium speakers that are phenomenally built to deliver truly
        remarkable sound.
      </p>
      <div class="zx9__btn">
        <Link variant="flat" label="See Product" />
      </div>
    </div>
  </div>
  <div class="zx7">
    <h3 class="zx7__title">ZX7 SPEAKER</h3>
    <div class="zx7__btn">
      <Link variant="bordered" label="See Product" />
    </div>
  </div>
  <div class="yx1">
    <div class="yx1__box yx1__box--1"></div>
    <div class="yx1__box">
      <h3 class="zx7__title">ZX7 SPEAKER</h3>
      <div class="zx7__btn">
        <Link variant="bordered" label="See Product" />
      </div>
    </div>
  </div>
</section>
<style lang="scss">
  .show {
    background-color: transparent;
    padding-inline: 1.5rem;
    margin-bottom: 7.5rem;
    display: flex;
    gap: 1.5rem;
    width: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .zx9 {
    width: 100%;
    border-radius: 8px;
    background-color: var(--accent);
    padding-block: 3.4375rem;
    padding-inline: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    overflow: hidden;
    &__img {
      width: 10.9375rem;
      position: relative;
      & img {
        width: 100%;
        position: relative;
        z-index: 5;
      }
      &::before {
        z-index: 1;
        position: absolute;
        content: '';
        background-image: url('/public/assets/home/desktop/pattern-circles.svg');
        background-repeat: no-repeat;
        background-size: 100% auto;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -40%);
        width: 350%;
        height: 350%;
      }
    }
    &__title {
      color: var(--foreground-light);
      text-align: center;
      font-size: 2.25rem;
      font-style: normal;
      font-weight: 700;
      line-height: 1.11;
      letter-spacing: 0.0804rem;
      text-transform: uppercase;
      position: relative;
      z-index: 5;
      margin-bottom: 1.5rem;
    }
    &__body {
      color: var(--foreground-light);
      text-align: center;
      font-size: 0.9375rem;
      font-style: normal;
      font-weight: 400;
      line-height: 1.66;
      opacity: 0.75;
      position: relative;
      z-index: 5;
      max-width: 21.875rem;
      margin-inline: auto;
      margin-bottom: 1.5rem;
    }
    &__btn {
      position: relative;
      z-index: 5;
      width: fit-content;
      margin-inline: auto;
    }
  }
  .zx7 {
    width: 100%;
    border-radius: 8px;
    padding-block: 6.3125rem;
    padding-inline: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    gap: 2rem;
    overflow: hidden;
    background-image: url('public/assets/home/mobile/image-speaker-zx7.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    &__title {
      color: var(--foreground-dark);
      text-align: center;
      font-size: 1.75rem;
      font-style: normal;
      font-weight: 700;
      text-transform: uppercase;
      position: relative;
      line-height: normal;
      letter-spacing: 0.125rem;
      z-index: 5;
    }
    &__btn {
      position: relative;
      z-index: 5;
    }
  }
  .yx1 {
    display: flex;
    flex-wrap: wrap;
    row-gap: 1.5rem;
    column-gap: 0.625rem;
    width: 100%;
    align-items: stretch;
    justify-content: stretch;
    &__box {
      flex: 1 1 18.75rem;
      border-radius: 0.5rem;
      padding-block: 2.625rem;
      padding-inline: 1.5rem;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      gap: 2rem;
      overflow: hidden;
      background-color: var(--secondary-ghost);
      min-height: 12.5rem;
      &--1 {
        background-image: url('public/assets/home/mobile/image-earphones-yx1.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
      }
    }
    &__title {
      color: var(--foreground-dark);
      text-align: center;
      font-size: 1.75rem;
      font-style: normal;
      font-weight: 700;
      text-transform: uppercase;
      position: relative;
      line-height: normal;
      letter-spacing: 0.125rem;
      z-index: 5;
    }
    &__btn {
      position: relative;
      z-index: 5;
    }
  }
  @media screen and (min-width: 43.75rem) {
    .show {
      padding-inline: 2.5rem;
      margin-bottom: 6rem;
      gap: 2rem;
    }
    .zx9 {
      padding-block: 3.25rem 4rem;
      gap: 4rem;
      &__img {
        width: 12.375rem;
        &::before {
          width: 480%;
          height: 480%;
        }
      }
      &__title {
        font-size: 3.5rem;
        line-height: 1.03;
        letter-spacing: 0.125rem;
      }
      &__body {
        margin-bottom: 2.5rem;
      }
    }
    .zx7 {
      background-image: url('public/assets/home/tablet/image-speaker-zx7.jpg');
      padding-inline: 3.9063rem;
    }
    .yx1 {
      &__box {
        padding-block: 6.3125rem;
        padding-inline: 2.5rem;
        &--1 {
          background-image: url('public/assets/home/tablet/image-earphones-yx1.jpg');
        }
      }
    }
  }
  @media screen and (min-width: 62.5rem) {
    .show {
      padding-inline: 10.3125rem;
      margin-bottom: 12.5rem;
      gap: 3rem;
    }
    .zx9 {
      flex-direction: row;
      padding-block: 8.3125rem 7.75rem;
      padding-inline: 5.9375rem;
      justify-content: space-between;
      &__img {
        align-self: flex-end;
        position: relative;
        scale: 2;
        left: 15%;
        transform: translateY(3%);
        &::before {
          width: 240%;
          height: 240%;
          top: 70%;
        }
      }
      &__title,
      &__body {
        text-align: left;
      }
      &__body,
      &__btn {
        margin-left: 0;
      }
    }
    .zx7 {
      padding-inline: 5.9375rem;
      background-image: url('public/assets/home/desktop/image-speaker-zx7.jpg');
    }
    .yx1 {
      column-gap: 1.875rem;
      &__box {
        padding-inline: 5.9375rem;
        &--1 {
          background-image: url('public/assets/home/desktop/image-earphones-yx1.jpg');
        }
      }
    }
  }
</style>
