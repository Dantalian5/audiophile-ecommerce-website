---
import Button from './Button.astro';
import Number from '../form/Number.astro';
const {
  title = '',
  subtitle = '',
  body = '',
  imgRef = [''],
  newProductTag = false,
  price = 0,
} = Astro.props;
---

<article class="product-shop">
  <picture>
    {imgRef[2] && <source srcset={imgRef[2]} media="(min-width: 75rem)" />}
    {imgRef[1] && <source srcset={imgRef[1]} media="(min-width: 43.75rem)" />}
    <img class="product-shop__img" src={imgRef[0]} alt={title} />
  </picture>
  <div class="product-shop__info">
    {newProductTag && <span class="product-shop__new">NEW PRODUCT</span>}
    <h2 class="product-shop__title">{title}<br />{subtitle}</h2>
    <p class="product-shop__body">{body}</p>
    <p class="product-shop__price">${price}</p>
    <div class="product-shop__cart">
      <Number />
      <Button label="add to cart" variant="accent" />
    </div>
  </div>
</article>

<style lang="scss">
  .product-shop {
    background-color: none;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 100%;
    position: relative;
    align-items: center;
    &__img {
      width: 100%;
      height: 22rem;
      border-radius: 8px;
      background-color: var(--secondary-ghost);

      object-fit: cover;
      object-position: center center;
    }
    &__info {
      width: 100%;
      max-width: 35.75rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
      justify-content: center;
    }
    &__new {
      color: var(--accent);
      font-size: 0.875rem;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
      letter-spacing: 0.625rem;
      text-transform: uppercase;
      margin-bottom: 0.5rem;
    }
    &__title {
      color: var(--foreground-dark);
      font-size: 1.75rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 0.0625rem;
      text-transform: uppercase;
      margin-bottom: 0.5rem;
    }
    &__body {
      color: var(--foreground-dark);
      font-size: 0.9375rem;
      font-style: normal;
      font-weight: 400;
      line-height: 1.5625rem; /* 166.667% */
      opacity: 0.5;
      margin-bottom: 0.5rem;
    }
    &__price {
      color: var(--foreground-dark);
      font-size: 1.125rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 0.0804rem;
      text-transform: uppercase;
    }
    &__cart {
      display: flex;
      gap: 1rem;
      align-items: center;
      justify-content: center;
    }
  }
  @media screen and (min-width: 43.75rem) {
    .product-shop {
      gap: 3.25rem;
      &__new {
        margin-bottom: 0;
      }
      &__title {
        margin-bottom: 1rem;
        font-size: 2.5rem;
        line-height: 2.75rem; /* 110% */
        letter-spacing: 0.0893rem;
      }
    }
  }
  @media screen and (min-width: 75rem) {
    .product-shop {
      flex-direction: row;
      column-gap: 125px;
      &.rightToLeft {
        flex-direction: row-reverse;
      }
      &__img {
        flex: 0 1 50%;
        width: auto;
        height: auto;
      }
      &__info {
        flex: 1 0 40%;
        align-items: flex-start;
        max-width: none;
      }
      &__title,
      &__body {
        text-align: left;
      }
    }
  }
</style>
