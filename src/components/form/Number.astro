---
const { id } = Astro.props;
---

<div id="id" class="number">
  <button type="button" class="number__btn minus-button">-</button>
  <input
    id="inputNumber"
    class="number__input"
    type="number"
    value="1"
    min="1"
    step="1"
  />
  <button type="button" class="number__btn plus-button">+</button>
</div>
<style lang="scss">
  .number {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.9375rem;
    width: fit-content;
    gap: 0.25rem;
    background: var(--secondary-ghost);
    &__input {
      -moz-appearance: textfield;
      &::-webkit-inner-spin-button,
      &::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
      color: var(--foreground-dark);
      text-align: center;
      font-size: 0.8125rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 1px;
      text-transform: uppercase;
      border: none;
      width: 3rem;
      background: none;
    }
    &__btn {
      color: var(--foreground-dark);
      text-align: center;
      font-size: 0.8125rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 1px;
      text-transform: uppercase;
      border: none;
      background: none;
      opacity: 0.25;
      cursor: pointer;
      width: 1rem;
      height: 1.125rem;
      display: flex;
      align-items: center;
      justify-content: center;
      &:hover {
        opacity: 1;
        color: var(--accent);
      }
    }
  }
</style>
<script>
  const minusNumber = document.querySelectorAll('minusNumber');
</script>
