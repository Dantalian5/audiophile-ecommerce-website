---
const {} = Astro.props;
---

<div class="number">
  <button id="minus" type="button" class="number__btn">-</button>
  <input class="number__input" type="number" value="1" min="1" step="1" />
  <button id="plus" type="button" class="number__btn">+</button>
</div>
<style lang="scss">
  .number {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.9375rem;
    width: fit-content;
    gap: 0.25rem;
    background: var(--secondary-ghost);
    &__input {
      -moz-appearance: textfield;
      &::-webkit-inner-spin-button,
      &::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }
      color: var(--foreground-dark);
      text-align: center;
      font-size: 0.8125rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 1px;
      text-transform: uppercase;
      border: none;
      width: 3rem;
      background: none;
    }
    &__btn {
      color: var(--foreground-dark);
      text-align: center;
      font-size: 0.8125rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 1px;
      text-transform: uppercase;
      border: none;
      background: none;
      opacity: 0.25;
      cursor: pointer;
      width: 1rem;
      height: 1.125rem;
      display: flex;
      align-items: center;
      justify-content: center;
      &:hover {
        opacity: 1;
        color: var(--accent);
      }
    }
  }
</style>
<script>
  $('button#minus').on('click', function () {
    const input = $(this).next();
    const value = parseInt(input.val());
    if (value > 1) {
      input.val(value - 1);
    }
  });
</script>
