---
import Link from './common/Link.astro';

const categories = [
  {
    name: 'Headphones',
    img: '../assets/shared/desktop/image-category-thumbnail-headphones.png',
    link: '/category/headphones',
  },
  {
    name: 'Speakers',
    img: '../assets/shared/desktop/image-category-thumbnail-speakers.png',
    link: '#',
  },
  {
    name: 'Earphones',
    img: '../assets/shared/desktop/image-category-thumbnail-earphones.png',
    link: '#',
  },
];
---

<section class="section shop">
  {
    categories.map((category) => (
      <div class="shop__card category">
        <div class="category__img">
          <img src={category.img} alt="headphones" />
        </div>
        <p class="category__name">{category.name}</p>
        <div class="category__btn">
          <Link variant="light" endContent href={category.link}>
            Shop
          </Link>
        </div>
      </div>
    ))
  }
</section>
<style lang="scss">
  .shop {
    display: flex;
    flex-wrap: wrap;
    row-gap: 1rem;
    column-gap: 0.625rem;
    align-items: stretch;
    justify-content: center;
    &__card {
      flex: 1 1 12.5rem;
      max-width: 21.875rem;
    }
  }
  .category {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    padding-block: 0 1.375rem;
    padding-inline: 1.375rem;
    background: transparent;

    &::before {
      content: '';
      position: absolute;
      inset: 52px 0px 0px 0px;
      background: var(--secondary-ghost);
      border-radius: 8px;
      z-index: -1;
    }
    &__img {
      width: 52%;
      max-width: 13.75rem;
      transition: scale 0.3s ease-in-out;
      & img {
        width: 100%;
      }
    }
    &:hover {
      .category__img {
        scale: 1.1;
      }
    }
    &__name {
      text-align: center;
      font-size: 0.9375rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 0.0669rem;
      text-transform: uppercase;
      color: var(--foreground-dark);
      margin-bottom: 1rem;
    }
    &__btn {
      display: flex;
    }
  }
  @media screen and (min-width: 43.75rem) {
    .category {
      &__img {
        width: 80%;
      }
    }
  }
  @media screen and (min-width: 62.5rem) {
    .shop {
      column-gap: 1.875rem;
    }
    .category {
      padding-bottom: 1.875rem;
      &::before {
        top: 80px;
      }
      &__name {
        font-size: 1.125rem;
      }
    }
  }
</style>
