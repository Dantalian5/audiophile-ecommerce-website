---
import Layout from './MainLayout.astro';

const { category } = Astro.props;
---

<Layout title="audiophile | by MV">
  <header class="header animation-retractil">
    <h1 class="header__title">{category}</h1>
  </header>
  <main class="section products">
    <slot />
  </main>
</Layout>

<style lang="scss">
  .header {
    background-color: var(--background-dark-19);
    padding: 2rem;
    width: 100%;
    overflow: hidden;

    display: flex;
    align-items: center;
    justify-content: center;
    min-height: fit-content;

    margin-bottom: 4rem;
    &__title {
      color: var(--foreground-light);
      text-align: center;
      font-size: 1.75rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 0.125rem;
      text-transform: uppercase;
      margin-inline: auto;
    }
  }
  .animation-retractil {
    animation: shrinkHeader 2s ease-in-out forwards;
  }
  .products {
    display: flex;
    flex-direction: column;
    row-gap: 7.5rem;
    width: 100%;
  }
  @media screen and (min-width: 43.75rem) {
    .header {
      padding: 6.25rem;
      margin-bottom: 7.5rem;
      &__title {
        font-size: 2.5rem;
        line-height: 2.75rem; /* 110% */
        letter-spacing: 0.0893rem;
      }
    }
  }
  @media screen and (min-width: 75rem) {
    .header {
      margin-bottom: 10rem;
    }
    .products {
      row-gap: 10rem;
      margin-bottom: 10rem;
    }
  }
  @keyframes shrinkHeader {
    0% {
      height: 100svh;
    }
    25% {
      height: 100svh;
    }
    100% {
      height: 1svh;
    }
  }
</style>
