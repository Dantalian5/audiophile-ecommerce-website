---
import Layout from './MainLayout.astro';
import ShopSection from '../components/ShopSection.astro';

const { category } = Astro.props;
---

<Layout title="audiophile | by MV">
  <header class="header">
    <h1 class="header__title">{category}</h1>
  </header>
  <main class="section products">
    <slot />
  </main>
  <ShopSection />
</Layout>

<style lang="scss">
  .header {
    background-color: var(--background-dark-19);
    padding: 2rem;
    width: 100%;
    overflow: hidden;

    margin-bottom: 4rem;
    &__title {
      color: var(--foreground-light);
      text-align: center;
      font-size: 1.75rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 0.125rem;
      text-transform: uppercase;
      margin-inline: auto;
    }
  }
  .products {
    display: flex;
    flex-direction: column;
    row-gap: 7.5rem;
    width: 100%;
  }
  @media screen and (min-width: 43.75rem) {
    .header {
      padding: 6.25rem;
      margin-bottom: 7.5rem;
      &__title {
        font-size: 2.5rem;
        line-height: 2.75rem; /* 110% */
        letter-spacing: 0.0893rem;
      }
    }
  }
  @media screen and (min-width: 75rem) {
    .header {
      margin-bottom: 10rem;
    }
    .products {
      row-gap: 10rem;
      margin-bottom: 10rem;
    }
  }
</style>
