---
import Layout from '@layouts/MainLayout.astro';
import GoBack from '@components/common/GoBack.astro';
---

<Layout title="audiophile | by MV">
  <header class="main-padding header">
    <GoBack />
  </header>
  <article class="main-margin-bottom">
    <slot name="product-cart" />
    <slot name="product-description" />
    <slot name="product-gallery" />
  </article>
  <slot name="product-advice" />
</Layout>

<style lang="scss">
  .header {
    margin-block: 1rem 1.5rem;
  }
  @media screen and (min-width: 43.75rem) {
    .header {
      margin-top: 2rem;
    }
  }
</style>
